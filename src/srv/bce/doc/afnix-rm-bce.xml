<appendix service="bce" number="i">
  <title>Standard Content Session Management Reference</title>

  <!-- ==================================================================== -->
  <!-- = part object                                                      = -->
  <!-- ==================================================================== -->

  <object nameset="afnix:bce">
    <name>Part</name>

    <p>
      The <code>Part</code> class is a base class which constitues
      the primary ingredient of the block chain bill of material.
    </p>

    <!-- predicate -->
    <pred>part-p</pred>

    <!-- inheritance -->
    <inherit>
      <name>Serial</name>
    </inherit>

    <!-- methods -->
    <methods>
      <meth>
	<name>get-name</name>
	<retn>String</retn>
	<args>none</args>
	<p>
	  The <code>get-name</code> method returns the part name.
	</p>
      </meth>

      <meth>
	<name>get-uuid</name>
	<retn>Uuid</retn>
	<args>none</args>
	<p>
	  The <code>get-uuid</code> method returns the part uuid
	</p>
      </meth>
    </methods>
  </object>
</appendix>
